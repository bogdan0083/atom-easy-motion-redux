{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "import/no-unresolved": [2, { "ignore": ["atom"] }],
    "quotes": ["error", "single"],
    "class-methods-use-this": 0,
    "prefer-destructuring": 0,
    "no-restricted-syntax": 0
  }
}
